<div class="section-wrapper-{{ section.id }} multi-column-text"> 
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'block-content-style-2' %}
            <div class="heading-block-{{ block.id }} text-block">
                    <h2 class="heading">
                      {{ block.settings.heading }} 
                    </h2>
                    <div class="section-descrption">
                        {{ block.settings.description }} 
                    </div>
            </div>
  
        {% when 'block-content-style-1' %}  
              <div class="text-content-block-{{ block.id }} text-block">
                 <div class="block-title">
                    <h3 class="title">
                      {{ block.settings.title }}     
                    </h3>
                 </div>
                 <div class="sub-title">
                    {{ block.settings.sub-title }}
                 </div>
                 <div class="description">
                  {{ block.settings.block-description }}
                 </div>                             
              </div>  
       {% endcase %}
     {% endfor %}  
</div>

<style>

 .section-wrapper-{{ section.id }}.multi-column-text{
    max-width: 1320px;
    margin: 0 auto;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    align-items: flex-start;
    text-align: justify;
    row-gap: unset;
 }

{% for block in section.blocks %}
  {% case block.type %}
  {% when 'block-content-style-2' %}

    .heading-block-{{ block.id }} h2.heading{
      margin-top: 0px;
      font-size: 70px;
      line-height: 56px;
    }
    .heading-block-{{ block.id }} .section-descrption p{
      font-size: {{ section.settings.description-font-size }}px;
      color: {{ section.settings.description-color }};
      line-height: 28px;
    }
    
    {% when 'block-content-style-1' %}  

      .text-content-block-{{ block.id }} .block-title h3.title{
        margin-top: 0px;
        font-size: {{ section.settings.title-font-size }}px;
        color: #000000;
        line-height: 37.21px;
      }
      .text-content-block-{{ block.id }} .sub-title{
        height: 45px;
      }
      .text-content-block-{{ block.id }} .sub-title p{
        font-size: {{ section.settings.sub-title-font-size }}px;
        color: #000000;
        line-height: 21px;
      }
      .text-content-block-{{ block.id }} .description p{
        font-size: {{ section.settings.description-font-size }}px;
        color: #000000;
        line-height: 28px;
      }
      
      .text-block:not(:nth-child(3n)){
          border-right: 1px solid rgba(43, 39, 37, 0.3);         
      }
      .text-block{
        max-width: 33%;
        padding: 0px 45px;
        padding-top: 100px;
        height: 650px;
        border-bottom: 1px solid rgba(43, 39, 37, 0.3);
      }
      .text-block:nth-last-child(-n+3){
        border-bottom: none;
      }
      .text-block:nth-child(n+4){
        padding-top: 75px;
      }





  {% endcase %}
{% endfor %}
</style>


