<Section class="section-wrapper-{{ section.id }}">
 
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'image' %}
          <div class="image-wrapper">
                <div class="left-image-wrapper image {{ block.settings.custom-box-width }}">
                  <div class="left-image">
                      {% if block.settings.first-image %}
                      <img
                        src=" {{ block.settings.first-image | img_url: 'master' }} "
                        alt=""
                        height=""
                        width=""
                        loading="lazy">
                      {%- else -%}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    
                      {% endif %}
                  </div>
                  <div class="text-block {{ block.settings.text-align }}">
                    {{ section.settings.text }}
                  </div> 
                </div>

                <div class="right-image-wrapper image {{ block.settings.custom-box-width }}">
                  <div class="right-image">
                      {% if block.settings.second-image %}
                      <img
                        src=" {{ block.settings.second-image | img_url: 'master' }} "
                        alt=""
                        height=""
                        width= ""
                        loading="lazy">
                      {%- else -%}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    
                      {% endif %}
                  </div>
                  <div class="text-block {{ block.settings.text-align }}">
                    {{ section.settings.text }}
                 </div> 
                </div>       
         </div>

        {% when 'spacer-block' %}
            <div class="spacer-{{ block.id }}">
                
            </div>
   {% endcase %}
  {% endfor %}
</Section>

<style>

  {% for block in section.blocks %}
    {% case block.type %}
    {% when 'image' %}
      .section-wrapper-{{ section.id }} .image-wrapper{
        display: flex;
        justify-content: center;
        gap: {{ block.settings.gap }}px;
        line-height: 0px;
        margin: auto;
        width: 
      }
      .section-wrapper-{{ section.id }} .image-wrapper.image{
        background: {{ block.settings.background-color }};
      }
      .section-wrapper-{{ section.id }} .image-wrapper .left-image-wrapper .left-image{
        padding: {{ block.settings.top-down-margin }}px {{ block.settings.left-right-margin }}px;
        height: 100%;
      }
      .section-wrapper-{{ section.id }} .image-wrapper img{
        width: 100%;
        height: 100%;
      }
       .section-wrapper-{{ section.id }} .text-block p{
        font-size: {{ block.settings.font-size | append: 'px' }};
        font-family: {{ block.settings.font }};
        color: {{ block.settings.text-color }};
        margin: 0px;
      }

      {% when 'spacer-block' %}
        .section-wrapper-{{ section.id }} .spacer-{{ block.id }}{
          height: {{ block.settings.spacer-height }}px;
        }
      {% endcase %}
    {% endfor %}
</style>

{% schema %}
{
"name": "double-image-text",
"blocks":[
  {
    "type": "image",
    "name": "Image",
    "settings": [
      {
        "type": "image_picker",
        "id": "first-image",
        "label": "First Image"
      },
      {
        "type": "image_picker",
        "id": "second-image",
        "label": "Second Image"
      },
      {
        "type": "range",
        "id": "block-width",
        "label": "Block Width",
        "min": 600,
        "max": 1400,
        "step": 10,
        "unit": "px",
        "default": 1000
      },

      {
        "type": "range",
        "id": "first-image-width",
        "label": "First Image Width",
        "min": 220,
        "max": 700,
        "step": 5,
        "unit": "px",
        "default": 300
      },
      {
        "type": "range",
        "id": "second-image-width",
        "label": "Second Image Width",
        "min": 220,
        "max": 700,
        "step": 5,
        "unit": "px",
        "default": 300
      },
      {
        "type": "range",
        "id": "top-down-padding",
        "label": "Left Image Padding(Top-Down)",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "default": 56
      },
      {
        "type": "range",
        "id": "left-right-padding",
        "label": "Left Image Padding(Left-Right)",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "default": 56
      },
      {
        "type": "range",
        "id": "gap",
        "label": "Gap between",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "default": 56
      },
      {
        "type": "color",
        "id": "background-color",
        "label": "Background color",
        "default": "#FFFFFF"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Change Text",
        "default": "<p>hello</p>"
      },
      {
      "type": "font",
      "id": "font",
      "label": "Font Family"
      },
      {
        "type": "range",
        "id": "font-size",
        "label": "Font size",
        "min": 12,
        "max": 50,
        "step": 1,
        "unit": "px",
        "default": 14
      },
      {
        "type": "color",
        "label": "Text color",
        "id": "text-color",
        "default": "#FFFFFF"
      },
      {
        "type": "range",
        "id": "line-height",
        "label": "Line height",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "default": 0
      },
      {
        "type": "checkbox",
        "id": "hide-text",
        "label": "Hide Text",
        "default": false
      },
      {
        "type": "select",
        "id": "text-align",
        "label": "Text align",
        "options": [
          {
            "value": "left",
            "label": "left"
          },
          {
            "value": "center",
            "label": "center"
          },
          {
            "value": "right",
            "label": "right"
          }
        ],
        "default": "left"
      }
    ]
  },
  {
          "type": "spacer-block",
          "name": "Spacer",
          "settings": [
            {
              "type": "range",
              "id": "spacer-height",
              "label": "Spacer Height",
              "min": 0,
              "max": 200,
              "step": 5,
              "unit": "px",
              "default": 30
            }
          ]
  }
],

"presets": [
{
  "category": "content",
  "name": "double-image-text",
  "blocks": [
    {
      "type": "image"
    },
    {
      "type": "spacer-block"
    }
  ]
}
]  

}
