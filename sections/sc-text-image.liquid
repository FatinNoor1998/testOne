<Section class="section-wrapper-{{ section.id }} width-{{ section.settings.section-width }}">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'image-text' %}

        <div class="block-wrapper-{{ block.id }} {{ block.settings.align-items }}{% if block.settings.swap == true %} row-reverse{% endif %}">
          <div class="image-section">
            {% if block.settings.image %}
            <img
              src=" {{ block.settings.image | img_url: 'master' }} "
              alt=""
              height=""
              width= ""
              loading="lazy">
            {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      
            {% endif %}
          </div>
          
          <div class="text-section {{ block.settings.text-align }} ">
              <div class="heading">
                      <h2>{{ block.settings.heading }}</h2>
              </div>
              <div class="description">
                        {{ block.settings.description-content}}
              </div>
              <div class="button{% if block.settings.hide-button == true %} hide-btn{% endif %}" >
                <a href="#" type="button">{{ block.settings.button-text }} </a>
              </div>
          </div>  
        </div>

    {% endcase %}
  {% endfor %}
</Section>

<style>
    
      section .section-wrapper-{{ section.id }}.width-small{
        max-width: 968px;
        margin: 0 auto;
      }
      section .section-wrapper-{{ section.id }}.width-medium{
        max-width: 1156px;
        margin: 0 auto;
      }
     
  {% for block in section.blocks %}
    {% case block.type %}
    {% when 'image-text' %}


    {% endcase %}
  {% endfor %}
</style>

