<div class="section-wrapper-{{ section.id }} single-image">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'image' %}
        <div class="image-block-wrapper-{{ block.id }} width-{{ block.settings.block-width }}">
           <div class="image">
                {% if block.settings.image %}
                <img
                  src=" {{ block.settings.image | img_url: 'master' }} "
                  alt=""
                  height= 400px
                  width= 600px
                  loading="lazy">
                 {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      
                {% endif %}
           </div>
          
          <div class="text {{ block.settings.text-align }}">
              {{ block.settings.text-content }}
          </div>
        </div>
        
    {% endcase %}
  {% endfor %}
</div>


<style>
  {% for block in section.blocks %}
    {% case block.type %}
    {% when 'image' %}

    .section-wrapper-{{ section.id }}.single-image .image-block-wrapper-{{ block.id }}.width-small{
      max-width: 600px;
      margin: 0 auto;
    }
    .section-wrapper-{{ section.id }}.single-image .image-block-wrapper-{{ block.id }}.width-medium{
      max-width: 967px;
      margin: 0 auto;
    }
    .section-wrapper-{{ section.id }}.single-image .image-block-wrapper-{{ block.id }}.width-full{
      max-width: 100%;
    }
    .section-wrapper-{{ section.id }}.single-image .image-block-wrapper-{{ block.id }}{
      padding-bottom: 40px;
    }
    .section-wrapper-{{ section.id }}.single-image .image-block-wrapper-{{ block.id }} .image img{
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .section-wrapper-{{ section.id }}.single-image .image-block-wrapper-{{ block.id }} .text p{
      font-size: {{ block.settings.font-size | append: 'px' }};
      font-family: {{ block.settings.font }};
      color: {{ block.settings.text-color }};
      line-height: 18px;
      margin: 0px;
    }
    .section-wrapper-{{ section.id }}.single-image .image-block-wrapper-{{ block.id }} .text p a{
      color: {{ block.settings.text-color }};
    }
    @media screen and (max-width: 980px){
      .section-wrapper-{{ section.id }}.single-image .image-block-wrapper-{{ block.id }}.width-medium
      {
        padding-right: 15px;
        padding-left: 15px;
      }   
    }
    @media screen and (max-width: 640px){
      .section-wrapper-{{ section.id }}.single-image .image-block-wrapper-{{ block.id }}.width-small
      {
        padding-right: 15px;
        padding-left: 15px;
      }   
      .section-wrapper-{{ section.id }}.single-image .image-block-wrapper-{{ block.id }} .text p{
        text-align: center;
        padding-left: 10px;
        padding-right: 10px;
      }
    }

      {% endcase %}
      {% endfor %}

</style>


{% schema %}
  {
  "name": "single-image",
  "tag": "section",
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {      
         "type": "select",
          "id": "block-width",
          "label": "Image Width",
          "options": [
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "full",
              "label": "Full"
            }
          ],
          "default": "medium"
       },
       {
        
        "type": "image_picker",
        "id": "image",
        "label": "Image"
       },
        {
          "type": "richtext",
          "id": "text-content",
          "label": "Change text",
          "default": "<p>Model wears Whiting Shirt Cosmic Papaya Check with Dean T Shirt Black and Pleat Trousers Black</p>"
        },
        {
          "type": "range",
          "id": "font-size",
          "label": "Font size",
          "min": 12,
          "max": 50,
          "step": 1,
          "unit": "px",
          "default": 12
        },
        {
          "type": "range",
          "id": "mobile-font-size",
          "label": "Mobile Font size",
          "min": 12,
          "max": 50,
          "step": 1,
          "unit": "px",
          "default": 12
        },
        {
         "type": "font",
         "id": "font",
         "label": "Font Family"
        },
        {
          "type": "color",
          "label": "Text color",
          "id": "text-color",
          "default": "#000000"
        },
        {
          "type": "select",
          "id": "text-align",
          "label": "text-align",
          "options": [
            {
              "value": "left",
              "label": "left"
            },
            {
              "value": "center",
              "label": "center"
            },
            {
              "value": "right",
              "label": "right"
            }
          ],
          "default": "left"
        }
      ]
    }
    
  ],
  "presets": [
    {
      "category": "content",
      "name": "single-image",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}

