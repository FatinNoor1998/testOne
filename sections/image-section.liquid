<Section class="section-wrapper-{{ section.id }}">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'text-block' %}
        <div class="text-block-{{ block-id }}">
          <div class="block-{{ block-id }}"></div>
        </div>

      {% when 'spacer-block' %}
        <div class="spacer-{{ block.id }}"></div>
    {% endcase %}
  {% endfor %}
</Section>

{% schema %}
{
  "name": "image-section",
  "blocks": [
    {
      "name": "text-block",
      "type": "text-block",
      "settings": [
        {
          "type": "richtext",
          "id": "text-content",
          "label": "Change text block",
          "default": "<p>Hello world</p>"
        },
        {
          "type": "range",
          "id": "font-size",
          "label": "Font size",
          "min": 12,
          "max": 50,
          "step": 1,
          "unit": "px",
          "default": 16
        },
        {
          "type": "range",
          "id": "mobile-font-size",
          "label": "Mobile Font size",
          "min": 12,
          "max": 50,
          "step": 1,
          "unit": "px",
          "default": 16
        },
        {
          "type": "range",
          "id": "line-height",
          "label": "Line height",
          "min": 10,
          "max": 100,
          "step": 1,
          "unit": "px",
          "default": 37
        },
        {
          "type": "range",
          "id": "mobile-line-height",
          "label": "Mobile Line height",
          "min": 10,
          "max": 100,
          "step": 1,
          "unit": "px",
          "default": 37
        },
        {
         "type": "font",
         "id": "font",
         "label": "Font Family"
        },
        {
          "type": "color",
          "label": "Text color",
          "id": "text-color",
          "default": "#000000"
        },
        {
          "type": "select",
          "id": "block-width",
          "label": "Block width",
          "options": [
            {
              "value": "small",
              "label": "Small"
            },
            {
              "value": "medium",
              "label": "Medium"
            },
            {
              "value": "full",
              "label": "Full"
            },
            {
              "value": "custom",
              "label": "Custom"
            }
          ],
          "default": "medium"
        },
        {
          "type": "range",
          "id": "custom-block-width",
          "label": "Custom block width",
          "min": 200,
          "max": 1900,
          "step": 50,
          "unit": "px",
          "default": 800
        }
      ]
    },

    {
      "type": "spacer-block",
      "name": "Spacer",
      "settings": [
        {
          "type": "range",
          "id": "spacer-height",
          "label": "Spacer Height",
          "min": 0,
          "max": 200,
          "step": 5,
          "unit": "px",
          "default": 30
        }
      ]
    },

    {
      "type": "image",
      "name": "Image",
      "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "range",
        "id": "image_width",
        "min": 50,
        "max": 200,
        "step": 5,
        "unit": "px",
        "label": "Image width",
        "default": 100
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Image alignment on large screen",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      }
     ]
    }
  ],
  "presets": [
    {
      "category": "content",
      "name": "image-section"
    }
  ]
}
{% endschema %}

